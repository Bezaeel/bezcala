{
  "compilerOptions": {
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "pretty": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "strict": true,
    "plugins": [],
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "lib": [
      "ES2015",
      "ES6",
      "ES7",
      "DOM",
      "ES2018",
      "ESNext"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ]
}